@model List<ProductViewModal>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Rate</th>
                <th>Stock</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model) {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Category</td>
                    <td>@product.ProductRate</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <div class="action-btn">
                            <button class="border-0 bg-transparent" onclick="ShowProductModal(@product.Id)">
                                <i class="bi bi-pencil-square text-primary"></i>
                            </button>
                            <button class="border-0 bg-transparent" onclick="ShowDeleteModal(@product.Id)">
                                <i class="bi bi-trash text-danger"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>