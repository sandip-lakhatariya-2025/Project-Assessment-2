@model UserViewModel

@{
    Layout= "_LoginLayout";
}

<!-- Login Container Start -->
<div class="container-fluid bg-white shadow" style="max-width: 1000px;">
    <div class="row">
        <div class="d-none d-sm-block col-sm-6">
            <div class="d-flex justify-content-center align-items-center p-5 h-100">
                <img class="login-img" src="~/images/login.jpg" alt="">
            </div>
        </div>
        <div class="col-12 col-sm-6">
            <div class="d-flex flex-column justify-content-center align-items-center p-3 p-lg-5 h-100" style="min-height: 450px;">
                <div class="fs-2 fw-semibold mb-4" style="color: #01705f;">User Login</div>
                    <form asp-controller="Auth" asp-action="Login" method="post" class="w-100">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                            <label for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 password-div position-relative">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                            <i onclick="togglePasswordVisibility('Password')" id="togglePassword" class="bi bi-eye-slash-fill"></i>
                            <label for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger position-absolute"></span>
                        </div>
                        <div class="d-flex mt-4">
                            <input type="checkbox" asp-for="IsRememberMe" class="form-check-input me-2 mb-4">Remember Me
                        </div>
                        <button class="btn w-100 login-btn" style="background-color: #01705f; color: white;">Login</button>
                    </form>
            </div>
        </div>
    </div>
</div>
<!-- Login Container End -->

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>